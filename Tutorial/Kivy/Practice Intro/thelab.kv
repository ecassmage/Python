<WidgetExample>:
    cols: 3
    ToggleButton:
        text: root.OnOffProperty
        on_press: root.secondButton()
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.State
    Label:
        text: root.my_text
        font_name: "RESOURCES_KIVY/1_THE_LAB/RESOURCES/fonts/Lcd.ttf"  # Important to be Long. Longer is more complex and more complex means definitely smarter.
        font_size: 100
        color: 0, 0, 1
    Switch:
        id: SliderState
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: my_slider
        min:0
        max:100
        orientation: "vertical"
        value: root.startingState
        # on_value: root.onSlider(self)
        disabled: not SliderState.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
            font_name: "RESOURCES_KIVY/1_THE_LAB/RESOURCES/fonts/Lcd.ttf"
            font_size: 25
            color: 1, 0, 1
        ProgressBar:
            max:100
            value: my_slider.value
    TextInput:
        id: TextInputText
        size_hint: None, 1
        width: "100dp"
        text:"foo"

        multiline:False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input



